<%= tr8n_with_options_tag(:default_locale => Tr8n::Config.default_admin_locale, :admin => true) do %>

	<%= render :partial => "/tr8n/common/header" %>
	
	<style>
	  .section_list {
	  	<%=tr8n_style_directional_attribute_tag('margin', 'left', '1em')%>;
	    padding: 3px;
	    list-style-type:none;
	  }
	  
	  .section_list_item {
	    padding:3px;
	    font-size: 12px;
	  }
	</style>
	
	<%
	    Tr8n::SiteMap.roots.each do |section|
	      next unless section.enabled?
	%>
	
	    <div class="section_title" style="<%=tr8n_style_attribute_tag('text-align', 'left')%>;">
	      <%=tra(section.label, section.description)%>
	    </div>
	    
	    <div class="section grey">
	      <div style="<%=tr8n_style_attribute_tag('float', 'right')%>; <%=tr8n_style_directional_attribute_tag('padding', 'right', '5px')%>">
	        <%=tr8n_help_icon_tag %>
	      </div>
	      <div style="<%=tr8n_style_attribute_tag('text-align', 'left')%>;<%=tr8n_style_directional_attribute_tag('padding', 'left', '15px')%>; padding-bottom:20px">
	        <%= tr8n_sitemap(section.children, section.data[:splitters]) %>
	      </div>
	    </div>
	
	<% 
	    end
	%>
	
	<%= render :partial => "/tr8n/common/footer" %>

<% end %>	